{
    "compilerOptions": {
        // "moduleResolution": "Bundler",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM.Iterable",
            "DOM"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true, /* enable all strict type-checking options */
        "esModuleInterop": true, // This is standard for browser + webpack setups.
        "skipLibCheck": true,
        // "resolveJsonModule": true,
    },
    "exclude": [
        "node_modules",
        "types",
        "docs",
        "dist",
        "web",
    ]
}